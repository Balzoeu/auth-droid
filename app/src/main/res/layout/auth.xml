<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.giacomoparisi.arrow.social.auth.AuthActivity">

        <Button
            android:id="@+id/firebase_google_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="GOOGLE FIREBASE LOGIN"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/firebase_facebook_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="FACEBOOK FIREBASE LOGIN"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/firebase_email_password_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="EMAIL PASSWORD FIREBASE LOGIN"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/facebook_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="FACEBOOK LOGIN"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/logout"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="LOGOUT"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>
</FrameLayout>